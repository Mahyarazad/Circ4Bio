@page
@model ServiceHost.Pages.MarketPlace.IndexModel
@inject IAuthenticateHelper AuthenticateHelper
@using _0_Framework.Application
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Market Place";
}

<div class="min-h-full flex flex-col justify-center py-6 sm:px-6 lg:px-8">
    <div class="lg:flex sm:flex-col lg:flex-row">

        <div class="lg:w-1/5">

            <div class="py-6 lg:col-span-3 lg:visible invisible lg:relative fixed duration-300
                 overflow-y-scroll overscroll-contain h-[calc(100vh-20rem)]
                 lg:overflow-visible lg:h-full lg:overscroll-none
                 shadow-2xl rounded-md lg:shadow-none lg:translate-x-[0rem] translate-x-[30rem]
                 top-32 lg:top-0 left-1/3 w-2/3 lg:w-auto lg:left-0
                 lg:z-0 z-50 bg-gray-50" id="available-filters">
                <nav class="space-y-1">
                    <div class="grid grid-cols-1">
                        <div class="flex justify-between">
                            <h3 class="px-4 text-gray-800">Availalbe Filters</h3>
                            <button type="button" onclick="closeFilterMenu()"
                                    class="bg-gray-50 text-gray-600 mr-3 lg:hidden visible">
                                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>
                        <div class="border-gray-200 py-6 px-4 h-10" id="shrink-div-0">
                            <h3 class="-my-3 flow-root">
                                <!-- Expand/collapse section button -->
                                <button type="button" onclick="handleFilter(this.id)" id="0"
                                        class="py-3 w-full bg-gray-50 flex items-center justify-between text-sm text-gray-400 hover:text-gray-500" aria-controls="filter-section-0" aria-expanded="false">
                                    <span class="font-medium text-gray-900 "> Type </span>
                                    <span class="px-4 mb-5">
                                        <svg class="h-5 w-5 absolute" id="svg-plus-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                                        </svg>

                                        <svg class="h-5 w-5 invisible absolute" id="svg-minus-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </span>
                                </button>
                            </h3>
                            <!-- Filter section, show/hide based on section state. -->
                            <div class="pt-6 invisible opacity-0 trasnform duration-200 -translate-y-[5rem]" id="filter-section-0">
                                <div class="space-y-4">
                                    <div class="flex items-center">
                                        <input id="filter-technology" onchange="handelFilter()" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-sky-800 focus:ring-sky-800">
                                        <label for="filter-color-0" class="ml-3 text-sm text-gray-600"> Technology Provider </label>
                                    </div>

                                    <div class="flex items-center">
                                        <input id="filter-plant" onchange="handelFilter()" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-sky-800 focus:ring-sky-800">
                                        <label for="filter-color-1" class="ml-3 text-sm text-gray-600"> Recycling Plant </label>
                                    </div>

                                    <div class="flex items-center">
                                        <input id="filter-supplier" onchange="handelFilter()" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-sky-800 focus:ring-sky-800">
                                        <label for="filter-color-2" class="ml-3 text-sm text-gray-600"> Supplier of Raw Material </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="border-gray-200 py-6 px-4 h-10" id="shrink-div-1">
                            <h3 class="-my-3 flow-root">
                                <!-- Expand/collapse section button -->
                                <button type="button" onclick="handleFilter(this.id)" id="1"
                                        class="py-3 w-full bg-gray-50 flex items-center justify-between text-sm text-gray-400 hover:text-gray-500" aria-controls="filter-section-0" aria-expanded="false">
                                    <span class="font-medium text-gray-900 "> Nace </span>
                                    <span class="px-4 mb-5">
                                        <svg class="h-5 w-5 absolute" id="svg-plus-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
                                        </svg>

                                        <svg class="h-5 w-5 invisible absolute" id="svg-minus-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M5 10a1 1 0 011-1h8a1 1 0 110 2H6a1 1 0 01-1-1z" clip-rule="evenodd" />
                                        </svg>
                                    </span>
                                </button>
                            </h3>
                            <!-- Filter section, show/hide based on section state. -->
                            <div class="pt-6 invisible opacity-0 trasnform duration-200 -translate-y-[5rem]" id="filter-section-1">
                                <div class="space-y-4">
                                    @foreach (var item in Model.NaceList)
                                    {
                                        <div class="flex items-center">
                                            <input onchange="handelFilter(parseInt(this.id), this.checked)" id="@item.NaceId" type="checkbox" class="h-4 w-4 border-gray-300 rounded text-sky-800 focus:ring-sky-800">
                                            <label for="filter-color-0" class="ml-3 text-sm text-gray-600"> @item.Title </label>
                                        </div>
                                    }

                                </div>

                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <div class="origin-top-right fixed lg:right-10 lg:top-28 top-32 right-16 mt-2 w-28
            rounded-md shadow-2xl invisible opacity-0 transform duration-100 scale-95
             bg-gray-50 ring-1 ring-black ring-opacity-5 focus:outline-none z-50"
             id="grid-size-container-unlogged" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">

                <a class="text-gray-900 block px-4 py-2 text-sm hover:cursor-pointer" onclick="handleGridItem(this.id)" role="menuitem" tabindex="-1" id="8"> 8 </a>
                <a class="text-gray-900 block px-4 py-2 text-sm hover:cursor-pointer" onclick="handleGridItem(this.id)" role="menuitem" tabindex="-1" id="16"> 16 </a>
                <a class="text-gray-900 block px-4 py-2 text-sm hover:cursor-pointer" onclick="handleGridItem(this.id)" role="menuitem" tabindex="-1" id="32"> 32 </a>
            </div>
        </div>

        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 flex-grow lg:w-4/5">

            <div class="-my-4 bg-gray-50 fixed flex justify-between lg:px-8 lg:w-4/5 sm-my-4 sm:px-6:px-6 w-full z-10">
                <div class="lg:w-2/3 w-full mx-2 lg:mx-0 mt-1">
                    <input class="lg:w-1/2 w-full border-gray-300 my-2 border
                       rounded-md shadow-sm py-2 mb-2 px-3 focus:outline-none focus:border-sky-500
                       focus:ring-sky-700 sm:text-sm float-left font-medium searchBox form-control"
                           id="search-input"
                           onkeyup="search(this)"
                           placeholder="Search...">
                </div>

                <div class="flex self-center">
                    <button type="button" id="grid-size-handler-unlogged"
                            class="mx-2 my-3 group inline-flex justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false" aria-haspopup="true">
                        <!-- Heroicon name: solid/chevron-down -->
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                    </button>
                    <button type="button" id="filter-menu-handler"
                            class="mx-2 my-3 group inline-flex justify-center text-sm lg:hidden
                            font-medium text-gray-700 hover:text-gray-900" aria-expanded="false" aria-haspopup="true">
                        <!-- Heroicon name: solid/chevron-down -->
                        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="py-2 mt-12 lg:mt-0 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg mt-0 lg:mt-8">
                    <!-- operation-result -->
                    <div class="rounded-md bg-green-50 p-4 transition ease-in-out duration-75" id="operation-result" style="display: none">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: solid/check-circle -->
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800" id="operation-result-message">

                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-md bg-red-50 p-4 transition ease-in-out duration-75" id="operation-result-failed" style="display: none">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: solid/check-circle -->
                                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-red-800" id="operation-result-failed-message">

                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- end -->
                    <div class="bg-white" id="listing-pagination">

                        <div class="mx-auto py-4 px-4 overflow-hidden sm:px-6 lg:px-8">
                            <div class="grid grid-cols-1 gap-y-4 gap-x-4 sm:grid-cols-2 lg:grid-cols-4 lg:gap-x-8 hidden" id="content">
                                <h3 id="no-result" class="hidden"></h3>
                                @foreach (var item in Model.Command)
                                {
                                        <div id="market-place-item"
                                             class="group text-sm result" data-type="@item.Type" data-item="@item.Id">
                                            <a class="w-full rounded-lg overflow-hidden bg-gray-100 group-hover:opacity-75"
                                               href="#showmodal=@Url.Page("./Index", "Load", new {Id = item.Id})"
                                               onclick="showModal()">
                                                <img src="~/Site Files/Listing_Images/@(item.Image == "listing-default.png" ? "listing-default.png" : $"{item.Type}/{item.Image}")"
                                                     alt="@item.Name" class="h-44 object-center object-cover rounded mx-auto">
                                            </a>
                                            <div class="flex flex-col">
                                                <div class="col-span-2">
                                                    @if (item.PublicStatus)
                                                    {
                                                        <h3 class="mt-1 font-medium text-gray-900">
                                                            Private Listing
                                                        </h3>}
                                                    @if (item.IsService)
                                                    {
                                                        <h3 class="bg-green-50 float-right font-medium mt-1 px-1 rounded text-green-600 text-xs">
                                                            Service Listing
                                                        </h3>}
                                                    <h3 class="mt-1 font-medium text-gray-900 truncate">@item.Type</h3>
                                                    <p class="text-gray-500 italic text-sm truncate">
                                                        @if (item.Name.Length > 25)
                                                        {
                                                            @(item.Name.Substring(0, 25) + "...")
                                                        }
                                                        else
                                                        {
                                                            @item.Name
                                                        }
                                                    </p>
                                                    <p class="font-medium text-gray-900">@item.Currency @item.UnitPrice</p>
                                                </div>
                                                <div class="self-end">

                                                    @if (item.UserId == AuthenticateHelper.CurrentAccountRole().Id & AuthenticateHelper.IsAuthenticated())
                                                    {
                                                        <div class="bg-gray-100 border border-transparent rounded-md shadow-sm py-1 px-1
                                                   inline-flex justify-center text-xs font-medium text-white hover:cursor-not-allowed">
                                                            Item Owned
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <a onclick="gototop()" asp-page="/AvailableListing/Detail" asp-area="Dashboard" asp-route-id="@item.Id"
                                                           class="bg-sky-700 border border-transparent rounded-md shadow-sm py-1 px-1
                                                   inline-flex justify-center text-xs font-medium text-white hover:bg-sky-800
                                                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-700">
                                                            Start Negotiation
                                                        </a>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                }
                            </div>

                            <div class="grid grid-cols-1 gap-y-4 gap-x-4 sm:grid-cols-2 lg:grid-cols-4 lg:gap-x-8" id="placeholder-wrapper">
                                @for (var i = 0; i < 8; i++)
                                {
                                    <div id="market-place-item"
                                         class="group text-sm result mb-8">
                                        <a class="w-full rounded-lg overflow-hidden bg-gray-100 group-hover:opacity-75">
                                            <div class="h-44 object-center object-cover rounded mx-auto placeholder-content"></div>
                                        </a>
                                        <div class="items-center">
                                            <div class="col-span-2">
                                                <div class="mt-1 font-medium text-gray-900 placeholder-content h-4 rounded"></div>
                                                <div class="mt-1 font-medium text-gray-900 placeholder-content h-4 rounded"></div>
                                                <div class="mt-1 font-medium text-gray-900 placeholder-content h-4 rounded"></div>
                                            </div>
                                            <div class="float-right">
                                                <a class="bg-sky-700 border border-transparent rounded-md shadow-sm
                                                   py-1 px-1 inline-flex mt-1
                                                   justify-center text-xs font-medium text-white hover:bg-sky-800
                                                   focus:outline-none focus:ring-2
                                                   focus:ring-offset-2 focus:ring-sky-700">
                                                    Start Negotiation
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                    <div class="flex items-center justify-center py-4 lg:px-0 sm:px-6 px-4">
                        <div class="lg:w-3/5 w-full  flex items-center justify-between border-t border-gray-200" id="pagingControls">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CSS{
    <link rel="stylesheet" href="~/css/Loader.css" />
}

@section Scripts{
    <script src="~/js/paginate.js"></script>
    <script>
        var items = @Html.Raw(JsonConvert.SerializeObject(Model.Command));
        var filtered = items;
        var element = document.getElementById("pagingControls");
        var paginateObject = paginate(filtered.length, 1);
        var _totalPages = paginateObject.pages.length;
        var page = 1;
        var hideItems = function() {
            items.forEach(e => {
                $(`div[data-item=${e.Id}]`).css('display', 'none');
            });
        };
        var showItems = function() {
            filtered.forEach(e => {
                $(`div[data-item=${e.Id}]`).css('display', 'block');
            });
        };

        if (_totalPages > 1) {
            element.innerHTML = createPagination(_totalPages, page);
        }

        $(document).ready(() => {
            $("#content").removeClass("hidden");
            $("#placeholder-wrapper").addClass("hidden");
        });

    </script>

}