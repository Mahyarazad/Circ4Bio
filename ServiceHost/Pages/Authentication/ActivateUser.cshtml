@page "{id}"
@model ServiceHost.Pages.Authentication.ActivateUserModel
@{ ViewData["Title"] = "Activate User"; }


@if (!string.IsNullOrWhiteSpace(Model.RegisterMessage))
{
    <div class="flex flex-col mt-4">
        <p class="text-center text-xl font-extrabold my-4
           tracking-tight text-gray-700 sm:text-xl lg:text-xl">
            @Model.RegisterMessage
        </p>
        <a asp-page="/Authentication/ResendActivationEmail"
           class="bg-white border border-sky-700 flex focus:outline-none focus:ring-2
           focus:ring-offset-2 focus:ring-sky-700 font-medium hover:bg-sky-800
           hover:text-white justify-center mt-2 px-4 py-2 rounded-md self-center
           shadow-sm text-sky-700 text-sm w-1/4 w-full">
            Resend Activation E-mail
        </a>
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.RegisterSuccess))
{

    <div class="flex flex-col mt-4">
        <p class="text-center text-xl font-extrabold my-4
           tracking-tight text-gray-700 sm:text-xl lg:text-xl">
            @Model.RegisterSuccess
        </p>
        <a asp-page="/Authentication/Login"
           class="bg-white border border-sky-700 flex focus:outline-none focus:ring-2
           focus:ring-offset-2 focus:ring-sky-700 font-medium hover:bg-sky-800
           hover:text-white justify-center mt-2 px-4 py-2 rounded-md self-center
           shadow-sm text-sky-700 text-sm w-1/4 w-full">
            Log in
        </a>
    </div>
}
<div class="flex justify-center pt-12 pb-12">
    <div class="lds-ripple mt-8 sm:max-w-md sm:mx-auto sm:w-full"><div></div><div></div></div>
</div>


@section CSS{
    <link rel="stylesheet" href="~/css/Loader.css" />
}