@inject _0_Framework.Application.IAuthenticateHelper AuthenticateHelper;

<header class="relative sticky top-0 z-50">
    <div class="bg-sky-800 pt-3 pb-3">
        <nav class="relative max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6" aria-label="Global">
            <div class="flex items-center flex-1 truncate">
                <div class="flex items-center justify-between w-full md:w-auto">
                    <a asp-page="/Index" class="pr-4">
                        <span class="sr-only">Workflow</span>
                        <img class="h-8 w-auto sm:h-10" src="~/Site Files/Circ4Bio.png" alt="">
                    </a>
                    <!-- Mobile Menu Trigger-->
                    <div class="flex items-center lg:hidden">
                        <button type="button" id="mobile-home-menu-open"
                                class="bg-gray-900 rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:bg-gray-800 focus:outline-none" aria-expanded="false">
                            <span class="sr-only">Open main menu</span>
                            <!-- Heroicon name: outline/menu -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                            </svg>
                        </button>
                    </div>
                    <!---->
                </div>
                <div class="hidden space-x-4 lg:flex">
                    <a href="#" class="text-base font-medium text-white rounded-md hover:text-gray-300 hover:bg-sky-800 px-1 py-2">Market Place</a>


                    <a asp-page="/ContactUs" class="text-base font-medium rounded-md text-white hover:text-gray-300 hover:bg-sky-800 px-3 py-2">Contact Us</a>

                </div>
            </div>
            <div class="hidden md:flex md:items-center md:space-x-6">
                @if (AuthenticateHelper.IsAuthenticated())
                {
                    <a asp-page="/Authentication/Login" asp-page-handler="Logout"
                       class="text-base font-medium text-white rounded-md hover:text-gray-300 hover:bg-sky-800 px-3 py-2">
                        Logout
                    </a>
                    <a asp-area="Dashboard" asp-page="./Index"
                       class="text-base font-medium text-white rounded-md hover:text-gray-300 hover:bg-sky-800 py-2">
                        @AuthenticateHelper.CurrentAccountRole().Email.ToString()
                    </a>
                }
                else
                {
                    <a asp-page="/Authentication/Login" class="text-base font-medium text-white rounded-md px-3 py-2 hover:text-gray-300 hover:bg-sky-800">
                        Log in
                    </a>
                }

                @* <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700"> *@
                @*     Start free trial *@
                @* </a> *@
            </div>
        </nav>
    </div>

    <!--
    Mobile menu, show/hide based on menu open state.

    Entering: "duration-150 ease-out"
    From: "opacity-0 scale-95"
    To: "opacity-100 scale-100"
    Leaving: "duration-100 ease-in"
    From: "opacity-100 scale-100"
    To: "opacity-0 scale-95"
    -->
    <div id="mobile-home-menu"
         class="absolute top-0 inset-x-0 origin-top lg:hidden m-3 invisible opacity-0 transform duration-300 fixed" >
        <div class="rounded-lg shadow-md bg-white ring-1 ring-black ring-opacity-5 overflow-hidden">
            <div class="px-5 pt-4 flex items-center justify-between">
                <div>
                    <img class="h-8 w-auto" src="~/Site Files/Circ4Bio.png" alt="">
                </div>
                <div class="-mr-2">
                    <button type="button" id="mobile-home-menu-close"
                            class="bg-white rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-cyan-600">
                        <span class="sr-only">Close menu</span>
                        <!-- Heroicon name: outline/x -->
                        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="pt-5 pb-6">
                <div class="px-2 space-y-1">
                    <a href="#" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Market Place</a>

                    <a asp-page="/ContactUs" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">Contact Us</a>

                    <a asp-page="/ContactUs" class="block px-3 py-2 rounded-md text-base font-medium text-gray-900 hover:bg-gray-50">About Us</a>
                </div>
                <div class="mt-6 px-5 space-y-3 flex flex-col">
                    @if (AuthenticateHelper.IsAuthenticated())
                    {
                        <a asp-page="/Index" asp-area="Dashboard" class="text-center text-base font-medium text-sky-800">@AuthenticateHelper.CurrentAccountRole().Email.ToString()</a>
                        <a asp-page="/Authentication/Login" asp-page-handler="Logout" asp-area=""
                           class="text-center text-base font-medium text-gray-700">
                            Logout
                        </a>
                    }
                    else
                    {
                        <p class="text-center text-base font-medium text-gray-500">Existing customer? <a asp-page="./Authentication/Login" class="text-gray-900 hover:underline">Login</a></p>
                    }

                </div>
            </div>
        </div>
    </div>
</header>

