@page "{id}"
@using _0_Framework.Application
@model ServiceHost.Areas.Dashboard.Pages.Deals.QuatationModel;
@inject IAuthenticateHelper AuthenticateHelper;
@{ ViewData["Title"] = $"Dashboard | Deals | {@Model.Command.ItemName} Quatation"; }


<form class="divide-y divide-gray-200 lg:col-span-9"
    method="post"
      enctype="multipart/form-data">
    <!-- operation-result -->
    <div class="rounded-md bg-green-50 p-4 transition ease-in-out duration-75" id="operation-result" style="display: none">
        <div class="flex">
            <div class="flex-shrink-0">
                <!-- Heroicon name: solid/check-circle -->
                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-green-800" id="operation-result-message">

                </p>
            </div>
        </div>
    </div>
    <!-- end -->
    <!-- Profile section -->
    <div class="mt-6 flex flex-col lg:flex-row">
        <div class="flex-grow space-y-6 mx-4">
            <div class="mt-6 grid grid-cols-12 gap-6">
                <div class="col-span-6 sm:col-span-6">
                    <label class="block text-sm font-medium text-gray-700">Tracking Code</label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        <b>@Model.Command.TrackingCode</b>
                    </p>
                    <label class="block text-sm font-medium text-gray-700">Item Name</label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Listing.Name
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <img class="h-24 w-24 rounded-full float-right"
                         src="~/Site Files/Listing_Images/@(Model.Command.Listing.Image == "listing-default.png" ? "listing-default.png" : $"{Model.Command.Listing.Type}/{Model.Command.Listing.Image}")"
                         alt="" />
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label asp-for="@Model.Command.Listing.Description" class="block text-sm font-medium text-gray-700"></label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Listing.Description
                    </p>
                </div>

                <div class="col-span-12 sm:col-span-6">
                    <label class="block text-sm font-medium text-gray-700"> Delivery Method </label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.DeliveryMethod
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label class="block text-sm font-medium text-gray-700">Delivery Cost</label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.DeliveryCost
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label class="block text-sm font-medium text-gray-700">Delivery Location Address</label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Location
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label asp-for="@Model.Command.Amount" class="block text-sm font-medium text-gray-700"></label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Amount
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label asp-for="@Model.Command.Currency" class="block text-sm font-medium text-gray-700"></label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Currency
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label asp-for="@Model.Command.Listing.Unit" class="block text-sm font-medium text-gray-700"></label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Unit
                    </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <label class="block text-sm font-medium text-gray-700"> Unit Price </label>
                    <p class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @Model.Command.Listing.UnitPrice
                        </p>
                </div>
                <div class="col-span-12 sm:col-span-6">
                    <span id="show-currency" class="absolute ml-72 sm:ml-56 mt-8 md:ml-72"></span>
                    <label class="block text-sm font-medium text-gray-700">Total Cost</label>
                    <p
                       class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        <b>@Model.Command.TotalCost</b>
                    </p>
                </div>

                <div class="col-span-12 sm:col-span-6">
                    <span id="show-currency" class="absolute ml-72 sm:ml-56 mt-8 md:ml-72"></span>
                    <label class="block text-sm font-medium text-gray-700">Contract File</label>
                    <a href="~/Site Files/Deal Documents/@Model.Command.NegotiateId/@Model.Command.ContractFileString"
                       class="mt-1 block w-full border border-gray-50 bg-gray-50 rounded-md shadow-sm py-2 px-3 sm:text-sm">
                        @(Model.Command.ContractFileString !=null ? "Download Contract File" :"No Contract File")
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4 py-4 px-4 flex justify-end sm:px-6">
        <a asp-page="/Deals/Index" asp-area="Dashboard" asp-route-id="@AuthenticateHelper.CurrentAccountRole().Id"
           class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
            Back
        </a>
    </div>
</form>

@section Scripts
{<script src="~/js/CalculateDeal.js"></script>}
