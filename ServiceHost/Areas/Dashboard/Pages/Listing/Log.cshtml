@model List<AM.Application.Contracts.Listing.ListingOperationLog>

<div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white flex flex-col">
    <button type="button" onclick="hideModal()"
            class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 self-end
            focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-700">
        <span class="sr-only">Close</span>
        <!-- Heroicon name: solid/x -->
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
    </button>
    <div class="mt-3 text-center">
        <table class="min-w-full border-collapse block md:table" id="main-table">
            <thead class="block md:table-header-group">
            <tr class="border border-grey-500 md:border-none block md:table-row absolute -top-full md:top-auto -left-full md:left-auto  md:relative ">
                <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Transaction Info</th>
                <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Detail</th>
            </tr>
            </thead>
            <tbody class="block md:table-row-group">
            @foreach (var item in Model)
            {
                <tr class="bg-white border border-grey-500 md:border-none block md:table-row">
                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                        <span class="inline-block w-1/3 md:hidden font-bold">Transaction Info</span>
                        <div>
                            <div class="text-xs text-gray-900">
                                @item.Description
                            </div>
                            <div class="text-xs text-gray-500">
                                @item.OperationTime
                            </div>
                        </div>
                    </td>
                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                        <span class="inline-block w-1/3 md:hidden font-bold">Transaction Info</span>
                        <div>
                            <div class="text-xs text-gray-900">
                                <span class="text:xs"> Current Amount:</span>

                                @item.CurrentAmount
                            </div>
                            @if (item.OperationType)
                            {
                                <div class="text-xs text-red-600">
                                    @item.Count
                                </div>
                            }
                            else
                            {
                                <div class="text-xs text-green-600">
                                    @item.Count
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>