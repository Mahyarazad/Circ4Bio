@page
@using _0_Framework
@using Microsoft.AspNetCore.Http
@model ServiceHost.Areas.Dashboard.Pages.Listing.CreateModel;
@inject IHttpContextAccessor _ContextAccessor;
@{ ViewData["Title"] = "Dashboard | Listing | Register a new listing"; }


<form class="divide-y divide-gray-200 lg:col-span-9"  id="edit-user-form"
      data-callback="" data-ajax="true" method="post" data-action="Refresh"
      enctype="multipart/form-data">
    <!-- operation-result -->
    <div class="rounded-md bg-green-50 p-4 transition ease-in-out duration-75" id="operation-result" style="display: none">
        <div class="flex">
            <div class="flex-shrink-0">
                <!-- Heroicon name: solid/check-circle -->
                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-green-800" id="operation-result-message">

                </p>
            </div>
        </div>
    </div>
    <!-- end -->
    <!-- Profile section -->
    <div class="py-6 px-4 sm:p-6 lg:pb-8">
    <div class="mt-6 flex flex-col lg:flex-row">
        <div class="flex-grow space-y-6">
            <div class="col-span-12 sm:col-span-6 flex justify-start">
                <input asp-for="Command.IsService" type="checkbox" onclick="listingIsService()"
                       class="h-4 w-4 text-sky-800 focus:ring-sky-700 border-gray-300 rounded mt-1" id="is-service">
                <label asp-for="Command.IsService" class="block text-sm font-medium text-gray-700 ml-2 pt-0.5">
                    Service Listing
                </label>
            </div>
            <div>
                <label asp-for="@Model.Command.Name" class="block text-sm font-medium text-gray-700">
                </label>
                <div class="mt-1 rounded-md shadow-sm flex">
                    <input type="text" asp-for="@Model.Command.Name" class="focus:ring-sky-500 focus:border-sky-500 flex-grow block w-full min-w-0 rounded sm:text-sm border-gray-300">
                    <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.Name"></span>
                </div>
            </div>

            <div>
                <label asp-for="@Model.Command.Description" class="block text-sm font-medium text-gray-700">
                    Description
                </label>
                <div class="mt-1">
                    <textarea asp-for="@Model.Command.Description" rows="3" class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                    Brief description for your listing.
                </p>
            </div>
        </div>

        <div class="mt-6 flex-grow lg:mt-0 lg:ml-6 lg:flex-grow-0 lg:flex-shrink-0">
            <p class="text-sm font-medium text-gray-700" aria-hidden="true">
                Photo
            </p>
            <div class="mt-1 lg:hidden">
                <div class="flex items-center">
                    <div class="flex-shrink-0 inline-block rounded-full overflow-hidden h-12 w-12" aria-hidden="true">
                        <img class="rounded-full h-full w-full" src="~/Images/Listing_Images/listing-default.png" alt="">
                    </div>
                    <div class="ml-5 rounded-md shadow-sm">
                        <div class="group relative border border-gray-300 rounded-md py-2 px-3 flex items-center justify-center hover:bg-gray-50 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-sky-500">
                            <label for="mobile-user-photo" class="relative text-sm leading-4 font-medium text-gray-700 pointer-events-none">
                                <span>Change</span>
                                <span class="sr-only"> user photo</span>
                            </label>
                            <input id="mobile-user-photo" asp-for="@Model.Command.Image" type="file" accept="image/*"
                                   class="absolute w-full h-full opacity-0 cursor-pointer border-gray-300 rounded-md">
                            <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.Image"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="hidden relative rounded-full overflow-hidden lg:block">
                <img class="relative rounded-full w-40 h-40" src="~/Images/Listing_Images/listing-default.png" alt="">
                <label for="desktop-user-photo" class="absolute inset-0 w-full h-full bg-black bg-opacity-75 flex items-center justify-center text-sm font-medium text-white opacity-0 hover:opacity-100 focus-within:opacity-100">
                    <span>Change</span>
                    <span class="sr-only"> user photo</span>
                    <input type="file" id="desktop-user-photo" asp-for="@Model.Command.Image" accept="image/*"
                           class="absolute inset-0 w-full h-full opacity-0 cursor-pointer border-gray-300 rounded-md">
                    <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.Image"></span>
                </label>
            </div>
        </div>
    </div>

    <div class="mt-6 grid grid-cols-12 gap-6">
        <div class="col-span-12 sm:col-span-6">
            <label asp-for="@Model.Command.DeliveryMethod" class="block text-sm font-medium text-gray-700"></label>
            <input type="text" asp-for="@Model.Command.DeliveryMethod"
                   class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
            <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.DeliveryMethod"></span>
        </div>

        <div class="col-span-12 sm:col-span-6" id="listing-unit">
            <label asp-for="@Model.Command.Unit" class="block text-sm font-medium text-gray-700"></label>
            <input type="text" asp-for="@Model.Command.Unit"
                   class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
            <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.Unit"></span>
        </div>
        <div class="col-span-12 sm:col-span-6">
            <label asp-for="@Model.Command.UnitPrice" class="block text-sm font-medium text-gray-700"></label>
            <input type="text" asp-for="@Model.Command.UnitPrice"
                   class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
            <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.UnitPrice"></span>
        </div>
        <div class="col-span-12 sm:col-span-6">
            <label asp-for="@Model.Command.Currency" class="block text-sm font-medium text-gray-700"></label>
            <select asp-for="@Model.Command.Currency"
                    asp-items="@Model.CurrencyList"
                    class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                <option value="">
                    Please select your currency
                </option>
            </select>
            <span asp-validation-for="@Model.Command.Currency" class="text-red-500"></span>
        </div>
        <div class="col-span-12 sm:col-span-6" id="listing-amount">
            <label asp-for="@Model.Command.Amount" class="block text-sm font-medium text-gray-700"></label>
            <input type="text" asp-for="@Model.Command.Amount"
                   class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm">
            <span class="text-red-500 sm:text-sm" asp-validation-for="@Model.Command.Amount"></span>
        </div>
        <div class="col-span-12 sm:col-span-6 flex justify-start">
            <input asp-for="Command.Status" type="checkbox" class="h-4 w-4 text-sky-800 focus:ring-sky-700 border-gray-300 rounded mt-1">
            <label asp-for="Command.Status" class="block text-sm font-medium text-gray-700 ml-2 pt-0.5">
                Mark Private
            </label>
        </div>


    </div>

    <div class="mt-4 py-4 px-4 flex justify-end sm:px-6">

        <a asp-page="/Listing/Index" asp-area="Dashboard" class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
            Back
        </a>
        <button id="save" type="submit" class="ml-5 bg-sky-700 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
            Save
        </button>

    </div>

</form>