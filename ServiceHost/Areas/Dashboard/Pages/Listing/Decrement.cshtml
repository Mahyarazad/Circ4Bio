@model AM.Application.Contracts.Listing.InputAmount

<div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white flex flex-col">
    <button type="button" onclick="hideModal()"
            class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 self-end
            focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-700">
        <span class="sr-only">Close</span>

        <!-- Heroicon name: solid/x -->
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
    </button>
    <h4 class="text-gray-800 float-left">Inventory Reduction</h4>
    <div class="mt-3 text-center">
        <form class="divide-y divide-gray-200 lg:col-span-9" id="form"
              asp-page-handler="Decrement" asp-page="./Index" data-callback=""
              method="post" data-action="Refresh" data-ajax="true">
            <partial name="_OperationResult" />
            <!-- Profile section -->
            @* <div class="py-6 px-4 sm:p-6 lg:pb-8"> *@
            @* <div class="mt-6 flex flex-col lg:flex-row"> *@
            <div class="flex-grow space-y-6">
                <div>
                    <div class="flex justify-between">
                        <label asp-for="Count"
                               class="py-2 text-sm font-medium text-gray-700">
                        </label>
                        <p class="text-sm py-2">Listing Unit: <b>@Model.ListingUnit</b></p>
                    </div>

                    <div class="mt-1 rounded-md shadow-sm">

                        <input type="number" asp-for="Count" value=""
                               class="focus:ring-sky-700
                                   focus:border-sky-500 flex-grow block w-full min-w-0 rounded sm:text-sm border-gray-300">
                        <span class="text-red-500 sm:text-sm" asp-validation-for="Count"></span>

                    </div>
                </div>
                <div>
                    <label class="float-left py-2 block text-sm font-medium text-gray-700">
                        Description
                    </label>
                    <div class="mt-1">
                        <input type="text" asp-for="Description" placeholder="Brief description of this change."
                               class="shadow-sm focus:ring-sky-700 focus:border-sky-500 mt-1 block w-full
                                   sm:text-sm border border-gray-300 rounded-md">
                    </div>
                </div>
            </div>
            <input asp-for="ListingId" type="hidden" />
            <div class="flex justify-end mt-4 py-4">
                <button type="button" onclick="hideModal()" class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-700">
                    Back
                </button>
                <button id="save" type="submit" class="ml-2 bg-sky-700 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-700">
                    Save
                </button>
            </div>


        </form>
    </div>
</div>