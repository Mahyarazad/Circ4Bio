@page
@using _0_Framework
@using AM.Application.Contracts.User
@using Microsoft.AspNetCore.Http
@model ServiceHost.Areas.Dashboard.Pages.Listing.IndexModel;
@inject IHttpContextAccessor _ContextAccessor;
@inject IUserApplication _UserApplication;
@{ ViewData["Title"] = "Dashboard | Listing"; }


<div class="divide-y divide-gray-200 lg:col-span-9">
    <div class="flex flex-col">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <!-- operation-result -->
                    <div class="rounded-md bg-green-50 p-4 transition ease-in-out duration-75" id="operation-result" style="display: none">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: solid/check-circle -->
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm font-medium text-green-800" id="operation-result-message">

                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- end -->
                    <div class="flex justify-start">

                        <a @(Model.user.Status ? "href=/dashboard/listing/create" : "")
                            class="text-center mx-3 my-3 @(Model.user.Status ? "bg-sky-700" : "bg-gray-100") border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white @(Model.user.Status ? "hover:bg-sky-800" : "hover:bg-gray-100") focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                            <i class="fa fa-plus-circle"></i>
                            Register a new listing
                        </a>
                        @if (Model.user.Status)
                        {
                            <a asp-page-handler="Deleted" class="text-center mx-3 my-3 bg-sky-700 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                                <i class="fa fa-plus-circle"></i>
                                Show Deleted Listings
                            </a>
                            <a asp-page="/Listing/Index" class="text-center mx-3 my-3 bg-sky-700 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                                <i class="fa fa-plus-circle"></i>
                                Hide Deleted Listings
                            </a>}

                        @if (!Model.user.Status)
                        {
                            <span class="text-red-500 pb-3 mx-5"> @ApplicationMessage.SubmitRequiredInfo</span>}
                    </div>

                    <table class="min-w-full border-collapse block md:table" id="main-table">
                        <thead class="block md:table-header-group">
                        <tr class="border border-grey-500 md:border-none block md:table-row absolute -top-full md:top-auto -left-full md:left-auto  md:relative ">
                            <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Listing Info</th>
                            <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Unit Price | Amount</th>
                            <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Image</th>
                            <th class="bg-gray-50 p-2 text-gray-600 font-bold md:border md:border-grey-500 text-left block md:table-cell">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="block md:table-row-group">
                        @foreach (var item in Model.Listing)
                        {
                            if (!item.IsDeleted | Model.ShowDeleted)
                            {
                                <tr class="bg-white border border-grey-500 md:border-none block md:table-row">
                                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                                        <span class="inline-block w-1/3 md:hidden font-bold">Listing Info</span>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">
                                                @item.Type
                                            </div>
                                            <div class="text-sm font-medium text-gray-900">
                                                @item.Name
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                @item.CreationTime
                                            </div>
                                        </div>
                                    </td>
                                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                                        <span class="inline-block w-1/3 md:hidden font-bold">Unit Price | Amount | Private & Public</span>
                                            <div class="text-sm text-gray-900">
                                                @item.UnitPrice
                                                <div class="text-sm text-gray-900">
                                                    @item.Amount
                                                    <span>@item.Unit</span>
                                                </div>
                                                @if (item.Status)
                                                {
                                                    <div class="text-sm text-gray-500 font-bold">
                                                        Private Listing
                                                    </div>

                                                }
                                            </div>
                                    </td>
                                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                                        <span class="inline-block w-1/3 md:hidden font-bold">Image</span>
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <img class="h-10 w-10 rounded-full"
                                                 src="~/Images/Listing_Images/@(item.Image == "listing-default.png" ? "listing-default.png" : $"{item.Type}/{item.Image}")"
                                                alt=""/>
                                        </div>
                                    </td>
                                    <td class="p-2 md:border md:border-grey-500 text-left block md:table-cell">
                                        <span class="inline-block w-1/3 md:hidden font-bold">Actions</span>
                                        <div class="flex justify-start my-2">
                                            <a asp-page="Edit" asp-route-id="@item.Id" class="mx-2 inline-flex items-center px-2 py-2 border border-gray-300 shadow-sm text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                                                Edit
                                            </a>
                                            @if (!item.IsDeleted)
                                            {
                                                <form asp-page="./Index" asp-page-handler="MarkDelete"
                                                      data-callback="" data-ajax="true" method="post" data-action="Refresh" class="mx-2">
                                                    <input type="hidden" name="Id" id="Id" value="@item.Id"/>
                                                    <button type="submit"
                                                            class="text-xs inline-flex items-center p-1 border border-transparent rounded-full shadow-sm text-white bg-red-400 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                                        <!-- Heroicon name: solid/plus-sm -->
                                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                                                  clip-rule="evenodd"/>
                                                        </svg>
                                                        Delete
                                                    </button>
                                                </form>
                                            }
                                            else
                                                {
                                                    <p class="sm:text-sm text-red-500">Deleted Listing</p>
                                            }
                                            @if (item.Status)
                                            {
                                                <form asp-page="./Index" asp-page-handler="MarkPublic"
                                                      data-callback="" data-ajax="true" method="post" data-action="Refresh" class="mx-2">
                                                    <input type="hidden" name="Id" id="Id" value="@item.Id"/>
                                                    <button type="submit"
                                                            class="text-xs inline-flex items-center p-1 border border-transparent rounded-full shadow-sm text-white bg-red-400 hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                                        <!-- Heroicon name: solid/plus-sm -->
                                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                                                  clip-rule="evenodd"/>
                                                        </svg>
                                                        Mark Public
                                                    </button>
                                                </form>
                                                 }
                                            else
                                            {
                                                <form asp-page="./Index" asp-page-handler="MarkPrivate"
                                                      data-callback="" data-ajax="true" method="post" data-action="Refresh" class="mx-2">
                                                    <input type="hidden" name="Id" id="Id" value="@item.Id"/>
                                                    <button type="submit"
                                                            class="text-xs inline-flex items-center p-1 border border-transparent rounded-full shadow-sm text-white bg-green-400 hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                                        <!-- Heroicon name: solid/check-sm -->
                                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                                  clip-rule="evenodd" />
                                                        </svg>
                                                        Mark Private
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>

                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/AlterDataTableDesign.js"></script>
}