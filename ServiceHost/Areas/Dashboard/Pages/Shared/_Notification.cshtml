@using AM.Application.Contracts.Notification
@using AM.Application.Contracts.User
@inject _0_Framework.Application.IAutenticateHelper AutenticateHelper;
@inject INotificationApplication NotificationApplication
<!--Notification Section-->
<div id="notification-panel" aria-live="assertive"
     class="inset-0 flex px-4 py-6 pointer-events-none sm:p-6 sm:items-start open:bg-white lg:mr-16 xl:mr-16 2xl:mr-44 invisible opacity-0 transform duration-300 fixed top-0 -translate-y-[20rem]">
    <div class="w-full flex flex-col items-center space-y-2 sm:items-start md:items-start lg:items-end mt-10 z-10" id="notification-wrapper">
        <div class="max-w-sm w-full pointer-events-auto overflow-hidden flex justify-between">
            <div class="mt-2 font-medium text-sm text-white ">
                <a asp-page="/Notification" asp-route-id="@AutenticateHelper.CurrentAccountRole().Id"
                   class="p-1 truncate bg-transparent-customized text-gray-100 hover:cursor-pointer hover:text-gray-300"
                >
                    <span id="view-all">
                        View All
                    </span>
                </a>
            </div>
            <form method="get" id="edit-user-form" asp-page-handler="MarkAllRead" asp-page="/Notification"
                  data-callback="" data-ajax="true" data-action="Refresh" class="p-1 font-medium text-sm text-white">
                <input type="hidden" value="@AutenticateHelper.CurrentAccountRole().Id" name="Id"/>
                <button type='submit' class="p-1 font-medium truncate bg-transparent-customized text-gray-100 hover:cursor-pointer hover:text-gray-300" id="view-all">
                    Mark All Read
                </button>
            </form>
        </div>
            <!--
            Notification panel, dynamically insert this into the live region when it needs to be displayed

            Entering: "transform ease-out duration-300 transition"
            From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
            To: "translate-y-0 opacity-100 sm:translate-x-0"
            Leaving: "transition ease-in duration-100"
            From: "opacity-100"
            To: "opacity-0"
            -->


            @if (NotificationApplication.CountUnread(AutenticateHelper.CurrentAccountRole().Id) == 0)
            {
                <div class="mt-10 max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto ring-1 ring-black ring-opacity-5 overflow-hidden">
                    <div class="p-4">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <!-- Heroicon name: outline/inbox -->
                                <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                                </svg>
                            </div>
                            <div class="ml-3 w-0 flex-1 pt-0.5">
                                <p class="text-sm font-medium text-gray-900">
                                    System Message
                                </p>
                                <p class="mt-1 text-sm text-gray-500">
                                    There is no new notification
                                </p>
                            </div>
                            <div class="ml-4 flex-shrink-0 flex">
                            </div>
                        </div>
                    </div>
                </div>}

        </div>
</div>
<!--End of Notification Section-->