@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Context;
<!DOCTYPE html>
<html lang="en" class="overflow-y-scroll">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Circ4Bio </title>
    <link rel="stylesheet" href="~/dist/output.css" />
    <link rel="stylesheet" href="~/css/Inter.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/js/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/tailwind.min.js"></script>
    @await Html.PartialAsync("_Favicons")
</head>
<body>

    <partial name="_DashboardHeader" />

<main role="main">

    <div class="max-w-max-customized">
        <div id="layout-container" class="overflow-hidden">
            <div class="relative bg-sky-700 lg:pb-32 pb-16">
                <!-- Menu open: "bg-sky-900", Menu closed: "bg-transparent" -->
                <!-- Menu open: "bottom-0", Menu closed: "inset-y-0" -->
                <div aria-hidden="true" class="inset-y-0 absolute inset-x-0 left-1/2 transform -translate-x-1/2 w-full overflow-hidden lg:inset-y-0">
                    <div class="absolute inset-0 flex">
                        <div class="h-full w-1/2" style="background-color: #0a527b;"></div>
                        <div class="h-full w-1/2" style="background-color: #065d8c;"></div>
                    </div>
                    <div class="relative flex justify-center">
                        <svg class="flex-shrink-0" width="1750" height="308" viewBox="0 0 1750 308" xmlns="http://www.w3.org/2000/svg">
                            <path d="M284.161 308H1465.84L875.001 182.413 284.161 308z" fill="#0369a1"/>
                            <path d="M1465.84 308L16.816 0H1750v308h-284.16z" fill="#065d8c"/>
                            <path d="M1733.19 0L284.161 308H0V0h1733.19z" fill="#0a527b"/>
                            <path d="M875.001 182.413L1733.19 0H16.816l858.185 182.413z" fill="#0a4f76"/>
                        </svg>
                    </div>
                </div>
                <header class="relative py-8 invisible lg:visible">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <h1 class="text-2xl font-bold text-white">
                            @ViewData["Title"]
                        </h1>
                    </div>
                </header>
            </div>
            <!--This class has been removed max-w-screen-xl from third div-->
            <main class="relative -mt-32">
                <div class="mx-auto pb-6 px-4 sm:px-6 lg:pb-16 lg:px-8">
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="divide-y divide-gray-200 lg:grid lg:grid-cols-12 lg:divide-y-0 lg:divide-x" id="scroll-into-top">

                            @if ((string) Context.HttpContext.Request.RouteValues.Values.First() == "/AvailableListing/Index")
                            {
                                <partial name="Shared/_AsideMarket"/>
                            }
                            else
                            {
                                <partial name="Shared/_Aside"/>
                            }
                            <div class="hidden" id="overlay">
                                <div class="flex justify-center my-64">
                                    <div class="loadingio-spinner-eclipse-bpb0a9tyqqv">
                                        <div class="ldio-91csn44uaj7">
                                            <div></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</main>

    <partial name="_Footer" />

    <!--Overlay Effect-->
    <div class="fixed inset-0 overflow-y-auto h-full w-full translate-y-full invisible transform duration-300 opacity-0"
         id="modal">
        <div class="modal-content" id="ModalConetnt">

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/jquery.cookie.min.js_1.4.1/cdnjs/jquery.cookie.min.js"></script>
    <script src="~/js/MenuHandlers.js"></script>
    <script src="~/js/datatables/jquery.dataTables.js"></script>
    <script src="~/js/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js//datatables/datatables.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/signalr/dist/browser/jquery.signalR.min.js"></script>
    <script src="~/js/notification.js"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("CSS", required: false)
</body>
</html>
