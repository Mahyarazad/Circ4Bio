@using _0_Framework.Application;
@using Microsoft.Extensions.Configuration
@inject IConfiguration _Configuration;
@model AM.Application.Contracts.User.CreateDeliveryLocation

<div class="relative top-20 sm:mx-auto p-5 border md:w-1/2 shadow-lg rounded-md bg-white">
    <button type="button" onclick="hideModal()"
            class="bg-white rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
        <span class="sr-only">Close</span>
        <!-- Heroicon name: solid/x -->
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
    </button>
    <div class="mt-3 text-center">
        <form class="divide-y divide-gray-200 lg:col-span-9" asp-page-handler="EditDeliveryLocation" asp-page="/Profile" data-callback=""
              method="post" data-action="Refresh" data-ajax="true">
            <!-- operation-result -->
            <div class="rounded-md bg-green-50 p-4 transition ease-in-out duration-75" id="operation-result" style="display: none">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <!-- Heroicon name: solid/check-circle -->
                        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800" id="operation-result-message">

                        </p>
                    </div>
                </div>
            </div>

            <div class="md:grid md:grid-cols-2 grid-cols-1 gap-1">
                <div class="col-span-1">
                    <label asp-for="Name" class="float-left py-1 text-sm font-medium text-gray-700">
                    </label>
                    <div class="mt-1">
                        <input type="text" asp-for="Name" placeholder="Choose a name for this address"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                        <span asp-validation-for="Name" class="float-left text-red-500 text-sm"></span>
                    </div>
                </div>
                <div class="col-span-1">
                    <label class="float-left py-1 text-sm font-medium text-gray-700">
                        Address Line 1
                    </label>
                    <div class="mt-1">
                        <input type="text" asp-for="AddressLineOne" placeholder="Address Line 1"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                        <span asp-validation-for="AddressLineOne" class="float-left text-red-500 text-sm"></span>
                    </div>
                </div>
                <div class="col-span-1">
                    <label class="float-left py-1 text-sm font-medium text-gray-700">
                        Address Line 2
                    </label>
                    <div class="mt-1">
                        <input type="text" asp-for="AddressLineTwo" placeholder="Address Line 2"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                    </div>
                </div>
                <div class="col-span-1">
                    <label asp-for="Country" class="float-left py-1 text-sm font-medium text-gray-700"></label>
                    <div class="mt-1">
                        <select asp-for="Country"
                                asp-items="new SelectList(GenerateCountryList.GetList())"
                                class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-sky-500 focus:border-sky-500 sm:text-sm rounded-md">
                            <option value="">
                                Please select a country
                            </option>
                        </select>
                        <span asp-validation-for="Country" class="float-left text-red-500 text-sm"></span>
                    </div>
                </div>
                <div class="col-span-1">
                    <label asp-for="City" class="float-left py-1 text-sm font-medium text-gray-700">
                    </label>
                    <div class="mt-1">
                        <input type="text" asp-for="City" placeholder="City"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                        <span asp-validation-for="City" class="float-left text-red-500 text-sm"></span>
                    </div>
                </div>
                <div class="col-span-1">
                    <label class="float-left py-1 text-sm font-medium text-gray-700">
                        Postal Code
                    </label>
                    <div class="mt-1">
                        <input type="number" asp-for="PostalCode" placeholder="Postal Code"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                    </div>
                </div>
                <div class="col-span-1">
                    <label asp-for="Latitude" placeholder="Latitude"
                           class="float-left py-1 text-sm font-medium text-gray-700">
                    </label>
                    <div class="mt-1">
                        <input type="number" asp-for="Latitude" placeholder="Latitude" onchange="updateMapLat(this.value)"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                    </div>
                </div>
                <div class="col-span-1">
                    <label asp-for="Longitude" class="float-left py-1 text-sm font-medium text-gray-700">
                    </label>
                    <div class="mt-1">
                        <input type="number" asp-for="Longitude" onchange="updateMapLng(this.value)"
                               placeholder="Longitude"
                               class="shadow-sm focus:ring-sky-500 focus:border-sky-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md" />
                    </div>
                </div>
                <div class="col-span-2">
                    <div class="flex-grow space-y-96 rounded-md hidden" id="map-wrapper"></div>

                </div>
                <div class="col-span-1">
                    <button type="button" onclick="getDeliveryLocation()"
                            class="bg-sky-800 float-left
                                border border-gray-300 rounded-md shadow-sm py-2 px-2
                                inline-flex justify-center text-sm font-medium text-white focus:outline-none
                                focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                        Get Current Location
                    </button>
                </div>


                <input asp-for="UserId" type="hidden" />
                <input asp-for="LocationId" type="hidden" />
                <div class="mt-4 py-4 px-4 flex justify-end sm:px-6">
                    <a href="#showmodal=@Url.Page("./Profile", "ListDeliveryLocation", new {Id = Model.UserId})"
                       class="bg-white border border-gray-300 rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                        Back
                    </a>
                    <button id="save" type="submit" class="ml-5 bg-sky-700 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-sky-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
@section CSS
{
    <link rel="stylesheet" href="~/css/mapbox-gl.css" />
}

<script defer>
    mapboxgl.accessToken = @Html.Raw(Json.Serialize(_Configuration.GetSection("MapBox")["SecretKey"]));
    function getDeliveryLocation() {
        if (window.navigator.geolocation) {
            window.navigator.geolocation.getCurrentPosition(showDeliveryPosition, error);

        } else {
            window.alert("Geolocation is not supported by this browser.");
        }
    }

    function error(err) {
        window.alert(`ERROR(${err.code}): ${err.message}`);
    }

    function showDeliveryPosition(position) {
        $("#map-wrapper").removeClass("hidden");
        $("#Latitude").val(position.coords.latitude);
        $("#Longitude").val(position.coords.longitude);
//
        var map = new mapboxgl.Map({
            container: 'map-wrapper',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [position.coords.longitude, position.coords.latitude],
            zoom: 13
        });

        map.on('load', () => {
            map.resize();
        });

        map.getCanvas().style.cursor = 'crosshair';
        const _marker = new mapboxgl.Marker({ color: 'red', rotation: 0, draggable: true})
            .setLngLat([position.coords.longitude, position.coords.latitude])
            .addTo(map);

        _marker.on('drag',
            function(e) {
                $("#Latitude").val(e.target._lngLat.lat.toFixed(6));
                $("#Longitude").val(e.target._lngLat.lng.toFixed(6));
            });
    }

    function updateMapLat(e) {
        var map = new mapboxgl.Map({
            container: 'map-wrapper',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [$("#Longitude").val(), e],
            zoom: 13
        });
        map.getCanvas().style.cursor = 'crosshair';
        const _marker = new mapboxgl.Marker({ color: 'red', rotation: 0, draggable: true })
            .setLngLat([position.coords.longitude, position.coords.latitude])
            .addTo(map);
        _marker.on('drag',
            function (e) {
                $("#Latitude").val(e.target._lngLat.lat.toFixed(6));
                $("#Longitude").val(e.target._lngLat.lng.toFixed(6));
            });
    }

    function updateMapLng(e) {
        var map = new mapboxgl.Map({
            container: 'map-wrapper',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: [e, $("#Latitude").val()],
            zoom: 13
        });
        map.getCanvas().style.cursor = 'crosshair';
        const _marker = new mapboxgl.Marker({ color: 'red', rotation: 0, draggable: true })
            .setLngLat([e, $("#Latitude").val()])
            .addTo(map);
        _marker.on('drag',
            function (e) {
                $("#Latitude").val(e.target._lngLat.lat.toFixed(6));
                $("#Longitude").val(e.target._lngLat.lng.toFixed(6));
            });
    }
</script>

